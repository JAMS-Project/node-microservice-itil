{
    "name": "node-microservice-itil",
    "version": "0.0.0-development",
    "description": "The Microservice handling ITIL Functions: Incident, Problem, and Change. Part of the JAMS Project",
    "engines": {
        "node": ">=20.0.0"
    },
    "type": "module",
    "main": "app.ts",
    "scripts": {
        "clean": "rm -rf coverage docs build temp",
        "build": "tsc -p tsconfig.json",
        "build:prod": "tsc -p tsconfig.prd.json",
        "build:watch": "tsc -p tsconfig.json -w",
        "dev": "fastify start -p 3000 -w -l debug -P build/app.js",
        "dev:trace": "fastify start -p 3000 -w -l trace -P build/app.js",
        "dev:expose": "fastify start -a 0.0.0.0 -p 3000 -w -l debug -P build/app.js",
        "prod": "fastify start -l info -P build/app.js",
        "lint": "npmPkgJsonLint . && ts-standard | snazzy",
        "lint:fix": "npmPkgJsonLint . && ts-standard --fix | snazzy",
        "test": "vitest run",
        "test:verbose": "vitest run --reporter verbose",
        "test:watch": "vitest watch",
        "test:coverage": "vitest --coverage",
        "typedoc": "typedoc",
        "typedoc:watch": "typedoc -watch",
        "update": "npx npm-check-updates -u --enginesNode && npm run update:post-update",
        "update:post-update": "npm install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/JAMS-Project/node-microservice-itil.git"
    },
    "keywords": [
        ""
    ],
    "author": {
        "name": "Shane Froebel"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/JAMS-Project/node-microservice-itil/issues"
    },
    "homepage": "https://github.com/JAMS-Project/node-microservice-itil#readme",
    "dependencies": {
        "@fastify/autoload": "file:../../../fastify-autoload",
        "@fastify/mongodb": "^8.0.0",
        "@mercuriusjs/federation": "^2.0.0",
        "fastify": "^4.26.1",
        "fastify-cli": "^6.1.1",
        "fastify-custom-healthcheck": "^3.1.0",
        "fastify-plugin": "^4.5.1",
        "fastify-rabbitmq": "^2.0.0",
        "mercurius-codegen": "^5.0.4"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@the-rabbit-hole/semantic-release-config": "^1.5.0",
        "@types/node": "^20.11.22",
        "@vitest/coverage-v8": "^1.3.1",
        "@vitest/ui": "^1.3.1",
        "gql-query-builder": "^3.8.0",
        "npm-check-updates": "^16.14.15",
        "npm-package-json-lint": "^7.1.0",
        "pre-commit": "^1.2.2",
        "semantic-release": "^23.0.2",
        "snazzy": "^9.0.0",
        "ts-node": "^10.9.2",
        "ts-standard": "^12.0.2",
        "tsd": "^0.30.7",
        "typedoc": "^0.25.9",
        "typescript": "^5.3.3",
        "vitest": "^1.3.1"
    }
}
